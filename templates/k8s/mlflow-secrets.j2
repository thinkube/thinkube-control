#jinja2: lstrip_blocks: True, trim_blocks: True
# MLflow authentication secrets for {{ project_name }}
# These secrets enable containers to query MLflow Model Registry and access models from S3
---
apiVersion: v1
kind: Secret
metadata:
  name: {{ project_name }}-mlflow-credentials
  namespace: {{ k8s_namespace }}
  labels:
    app.kubernetes.io/name: {{ project_name }}
    app.kubernetes.io/managed-by: argocd
type: Opaque
stringData:
  # Keycloak OAuth2 credentials for MLflow authentication
  mlflow-client-secret: "{{ mlflow_client_secret }}"
  admin-password: "{{ mlflow_password }}"

  # SeaweedFS S3 credentials for direct model loading
  seaweedfs-password: "{{ seaweedfs_password }}"
